<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muyhengsong.calculator.MainActivity">


    <EditText
        android:id="@+id/txt_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/txt_num2"
        android:layout_alignStart="@+id/txt_num2" />

    <EditText
        android:id="@+id/txt_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/txt_num1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_num1"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/txt_num1"
        android:layout_toStartOf="@+id/txt_num1"
        android:text="Number 1 :"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_num2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="11dp"
        android:text="Number 2 :"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="27dp"
        android:text="Result : "
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_num1"
        android:layout_alignEnd="@+id/txt_num1"
        android:layout_alignRight="@+id/txt_num1"
        android:text="0"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:typeface="serif"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_num2"
        android:layout_marginTop="56dp"
        android:layout_toLeftOf="@+id/txt_num2"
        android:layout_toStartOf="@+id/txt_num2"
        android:text="SUM"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_sum"
        android:layout_alignBottom="@+id/btn_sum"
        android:layout_alignEnd="@+id/txt_num2"
        android:layout_alignRight="@+id/txt_num2"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="MINUS"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_sum"
        android:layout_alignStart="@+id/btn_sum"
        android:layout_below="@+id/btn_sum"
        android:layout_marginTop="48dp"
        android:text="MULTYPLY"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_mul"
        android:layout_alignBottom="@+id/btn_mul"
        android:layout_alignLeft="@+id/btn_min"
        android:layout_alignStart="@+id/btn_min"
        android:text="DIVIDE"
        tools:ignore="HardcodedText" />

</RelativeLayout>
